<BodyWeightScreen>:
    md_bg_color: app.theme_cls.backgroundColor

    MDBoxLayout:
        orientation: "vertical"
        MDBoxLayout:
            id: weight_history
            size_hint_y: None
            height: root.width# - root.ids.weigt_tracking.height
            padding: dp(10)

        Widget:
            size_hint_y: 1

        MDBoxLayout:
            id: weigt_tracking
            orientation: "horizontal"
            size_hint_y: None
            height: weight_input.height
            MDTextField:
                id: weight_input
                mode: "outlined"
                text: root.weight
            MDLabel:
                text: "kg"
                halign: "center"
            MDFabButton:
                icon: "plus-thick"
                style: "standard"
                on_press: root.track_weight()
